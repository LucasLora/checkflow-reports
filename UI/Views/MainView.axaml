<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CheckFlow.Reports.UI.Views.MainView"
             xmlns:vm="using:CheckFlow.Reports.UI.ViewModels"
             x:DataType="vm:MainViewModel">
	<StackPanel Margin="20" Spacing="12">

		<Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto" ColumnSpacing="8">
			<Button Grid.Column="0"
			        Content="Selecionar ZIP"
			        Command="{Binding SelectZipCommand}"
			        Width="140" />

			<TextBlock Grid.Column="1"
			           Text="{Binding SelectedZipPath}"
			           VerticalAlignment="Center"
			           TextWrapping="Wrap" />
		</Grid>

		<Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto" ColumnSpacing="8">
			<Button Grid.Column="0"
			        Content="Gerar PDF"
			        Command="{Binding GenerateReportCommand}"
			        IsEnabled="{Binding CanGenerate}"
			        Width="140" />

			<TextBlock Grid.Column="1"
			           Text="{Binding StatusMessage}"
			           VerticalAlignment="Center"
			           TextWrapping="Wrap" />
		</Grid>

	</StackPanel>
</UserControl>
